@model LIMS.Models.LabsConfirmAddReagentViewModel
@{
    ViewBag.Title = "Adding reagent to lab";
}

<h2>@ViewBag.Title</h2>
<hr />

<div>
    @using (Html.BeginForm("ConfirmAddReagent", "Labs", new { lab = Model.Lab.LabId, reagent = Model.Reagent.ReagentId }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(m => m.Reagent.Name)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Reagent.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(m => m.Reagent.Quantity)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Reagent.Quantity)
            </dd>
            <dt>
                @Html.DisplayNameFor(m => m.Reagent.ExpiryDate)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Reagent.ExpiryDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(m => m.Reagent.ManufacturerCode)
            </dt>
            <dd>
                @Html.DisplayFor(m => m.Reagent.ManufacturerCode)
            </dd>
            <dt>
                @Html.DisplayNameFor(m => m.Quantity)
            </dt>
            <dd>
                @Html.EditorFor(m => m.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantity, null, new { @class = "text-danger" })
            </dd>
        </dl>

        @Html.ActionLink("Cancel", "Reagents", new { lab = Model.Lab.LabId }, new { @class = "btn btn-default" })
        <input type="submit" value="Add" class="btn btn-success" />
    }
</div>
