@model LIMS.Models.LabsRemoveReagentViewModel
@{
    ViewBag.Title = "Remove reagent from lab";
}

<h2>@ViewBag.Title</h2>
<hr />
<div>
    @using (Html.BeginForm("PostRemoveReagent", "Labs", new { lab = Model.Lab.LabId, usedReagentId = Model.UsedReagentId }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <dl class="row">
            <dt class="col-md-2 col-form-label">
                @Html.DisplayNameFor(m => m.Reagent.Name)
            </dt>
            <dd class="col-md-10">
                @Html.DisplayFor(m => m.Reagent.Name)
            </dd>
            <dt class="col-md-2 col-form-label">
                @Html.DisplayNameFor(m => m.Reagent.Quantity)
            </dt>
            <dd class="col-md-10">
                @Html.DisplayFor(m => m.Reagent.Quantity)
            </dd>
            <dt class="col-md-2 col-form-label">
                @Html.DisplayNameFor(m => m.Reagent.ExpiryDate)
            </dt>
            <dd class="col-md-10">
                @Html.DisplayFor(m => m.Reagent.ExpiryDate)
            </dd>
            <dt class="col-md-2 col-form-label">
                @Html.DisplayNameFor(m => m.Reagent.ManufacturerCode)
            </dt>
            <dd class="col-md-10">
                @Html.DisplayFor(m => m.Reagent.ManufacturerCode)
            </dd>
            <dt class="col-md-2 col-form-label">
                @Html.DisplayNameFor(m => m.ReturnQuantity)
            </dt>
            <dd class="col-md-10">
                @Html.EditorFor(m => m.ReturnQuantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ReturnQuantity, null, new { @class = "text-danger" })
            </dd>
        </dl>

        @Html.ActionLink("Cancel", "Reagents", new { lab = Model.Lab.LabId }, new { @class = "btn btn-secondary" })
        <input type="submit" value="Remove" class="btn btn-danger" />
    }
</div>
