@model LIMS.Models.SamplesCreateViewModel
@{
    ViewBag.Title = "Add sample";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm("Create", "Samples", FormMethod.Post, new { @role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        @Html.LabelFor(m => m.TestId, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.TestId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TestId, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.Description, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.AddedDate, new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                <div class="input-group-prepend" data-target="#datetimepicker1" data-toggle="datetimepicker">
                    <div class="input-group-text">
                        <span class="fa fa-calendar"></span>
                    </div>
                </div>
                @Html.EditorFor(m => m.AddedDate, new { htmlAttributes = new { @class = "form-control datetimepicker-input", data_target = "#datetimepicker1", placeholder = "DD/MM/YYYY HH:MM:SS AM" } })
            </div>
            @Html.ValidationMessageFor(model => model.AddedDate, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2 col-md-10">
            <input type="submit" class="btn btn-success" value="Add" />
        </div>
    </div>
}

<p>
    @Html.ActionLink("Back to samples", "Index")
</p>


@section Styles {
    @Styles.Render("~/Content/datetimepicker")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetimepicker")

    <script type="text/javascript">
        $(function ()
        {
            $('#datetimepicker1').datetimepicker({
                useCurrent: true,
                format: "DD/MM/YYYY h:mm:ss A",
                minDate: new Date(2000, 0),
                maxDate: new Date(2050, 0)
            });
        });
    </script>
}
