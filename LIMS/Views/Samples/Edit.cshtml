@model LIMS.Models.SamplesEditViewModel
@{
    ViewBag.Title = "Edit sample";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm(new { sample = Model.Sample.SampleId }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, null, new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.TestCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.TestCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TestCode, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.AddedDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="input-group date datetimepicker">
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                    @Html.EditorFor(m => m.AddedDate, new { htmlAttributes = new { @class = "form-control", placeholder = "DD/MM/YYYY HH:MM:SS AM" } })
                </div>
                @Html.ValidationMessageFor(model => model.AddedDate, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<p>
    @Html.ActionLink("Back to sample details", "Details", new { reagent = Model.Sample.SampleId })
</p>

@section Styles {
    @Styles.Render("~/Content/datetimepicker")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datetimepicker")

    <script type="text/javascript">
        $(function ()
        {
            $('.datetimepicker').datetimepicker({
                format: "DD/MM/YYYY h:mm:ss A",
                minDate: new Date(2000, 0),
                maxDate: new Date(2050, 0)
            });
        });
    </script>
}
